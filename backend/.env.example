# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trekr?retryWrites=true&w=majority
DB_NAME=trekr

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=https://yondr.me,https://www.yondr.me
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/HTTPS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/yondr.me/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yondr.me/privkey.pem

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/trekr/app.log

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yondr.me

# Location Sharing Configuration
LOCATION_UPDATE_INTERVAL=30000
MAX_LOCATION_HISTORY=1000
LOCATION_ACCURACY_THRESHOLD=100

# Route Configuration
MAX_ROUTE_POINTS=10000
ROUTE_COMPRESSION_ENABLED=true
GPX_EXPORT_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Development/Debug (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false