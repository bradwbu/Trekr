# Production Environment Configuration for yondr.me
NODE_ENV=production
PORT=3000

# Database - MongoDB Atlas (recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trekr?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-change-this
JWT_EXPIRES_IN=7d

# CORS Configuration - Allow your domain and iOS app
ALLOWED_ORIGINS=https://yondr.me,https://api.yondr.me,https://www.yondr.me

# Rate Limiting (more restrictive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880

# Email Configuration (for future features like password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=another-super-secure-session-secret

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/trekr/app.log